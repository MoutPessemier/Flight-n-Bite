<Page
    x:Class="Flight__n_Bite.Views.FoodsDrinksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flight__n_Bite.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:Flight__n_Bite.ViewModels"
    xmlns:models="using:Flight__n_Bite.Models"
    xmlns:util="using:Flight__n_Bite.Util"
    xmlns:controls="using:Template10.Controls"
    xmlns:usercontrols="using:Flight__n_Bite.Views.UserControls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:ProductViewModel x:Name="vm"/>
    </Page.DataContext>

    <Page.Resources>
        <util:IntegerToCurrencyConverter x:Key="IntegerCurrencyConverter" />
    </Page.Resources>

    <StackPanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="VisualState">
                    <VisualState.Setters>
                        <Setter Target="newOrderlineStackpanel.(FrameworkElement.Width)" Value="500"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1600"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualState1">
                    <VisualState.Setters>
                        <Setter Target="gridView.(Grid.Row)" Value="1"/>
                        <Setter Target="newOrderlineStackpanel.(Grid.Column)" Value="0"/>
                        <Setter Target="newOrderlineStackpanel.(FrameworkElement.Width)" Value="auto"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <controls:PageHeader x:Name="pageHeader" Text="Foods 'n drinks info"/>
        <Pivot>
            <PivotItem Header="All Products">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <GridView IsItemClickEnabled="True"
                              x:Name="gridView"
                              Grid.Row="0"
                              Grid.Column="0"
                              ItemsSource="{x:Bind Path=vm.Products}">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <usercontrols:ProductGridUserControl/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <StackPanel Width="auto"
                                x:Name="newOrderlineStackpanel"
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Vertical"
                                Background="AliceBlue"
                                Visibility="{x:Bind vm.NewOrderLineVisible, Mode=OneWay}">
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="My orders">
                <ListView ItemsSource="{x:Bind Path=vm.Orders}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Order">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="32" x:Name="id" Text="{x:Bind Path=Id}"/>
                                <TextBlock FontSize="32"><Run Text="OrderLines:"/></TextBlock>
                                <ListView ItemsSource="{x:Bind Path=OrderLines}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:OrderLine">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Row="0" Grid.Column="0"><Run Text="Product:"/></TextBlock>
                                                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="product" Text="{x:Bind Path=Product.Name}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"><Run Text="Amount:"/></TextBlock>
                                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="amount" Text="{x:Bind Path=Amount}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>
    </StackPanel>
</Page>
